{
    "manifest_version": 3,
    "name": "FakeJobAI - Scam Detector",
    "version": "1.0",
    "description": "Instantly analyze job postings on LinkedIn, Indeed, and more.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Scan Job"
    }
}